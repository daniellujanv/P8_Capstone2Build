<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_list_item"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_list_item_height"
        android:id="@+id/widget_list_item_wrapper"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="@dimen/one_dp"
        >
        <TextView
            android:id="@+id/widget_list_item_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Hello World!"
            android:gravity="center"
            android:layout_weight="1"
            android:nextFocusDown="@+id/friends_item_status"
            android:clickable="false"
            android:focusable="false"
            android:textIsSelectable="false"
            />
        <TextView
            android:id="@+id/widget_list_item_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/friend_offline"
            android:clickable="false"
            android:focusable="false"
            android:textIsSelectable="false"
            />
    </LinearLayout>
</FrameLayout>