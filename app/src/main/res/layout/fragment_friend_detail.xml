<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dlujanapps.mx.wary.fragments.FriendDetailFragment"
    android:theme="@style/WaryTheme.Dialog"
    >


    <android.support.design.widget.TextInputLayout
        android:id="@+id/friend_detail_edit_text_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/friend_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:hint="@string/new_friend_name"
            android:nextFocusDown="@+id/friend_detail_cancel"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@id/friend_detail_edit_text_wrapper"
        >

        <Button
            android:id="@+id/friend_detail_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/cancel"
            android:nextFocusDown="@+id/friend_detail_ok"
            />
        <Button
            android:id="@+id/friend_detail_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/ok"
            />

    </android.support.v7.widget.ButtonBarLayout>

</RelativeLayout>
